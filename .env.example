# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/screenshare

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT - CHANGE THIS IN PRODUCTION!
JWT_SECRET=your-super-secret-key-change-in-production

# Metered TURN Server
# Get your free API key from https://www.metered.ca/stun-turn
METERED_API_KEY=your-metered-api-key
METERED_API_URL=https://your-app.metered.live/api/v1/turn/credentials
STUN_SERVER=stun:stun.relay.metered.ca:80
TURN_SERVER=turn:standard.relay.metered.ca:443
TURN_SERVER_TCP=turns:standard.relay.metered.ca:443?transport=tcp
TURN_USERNAME=your-turn-username
TURN_CREDENTIAL=your-turn-credential

# CORS
CORS_ORIGINS=["http://localhost:8000","http://127.0.0.1:8000"]

# Debug
DEBUG=true

# Public URL (dış erişim için - tunnel veya domain)
PUBLIC_URL=https://your-domain.com
